{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker: up",
      "type": "shell",
      "command": "docker compose up -d",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "api: dev",
      "type": "process",
      "command": "${workspaceFolder}\\apps\\api\\.venv\\Scripts\\python.exe",
      "args": ["-m", "uvicorn", "app.main:app", "--reload", "--port", "8000"],
      "options": { "cwd": "${workspaceFolder}\\apps\\api" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "web: dev",
      "type": "process",
      "command": "npm",
      "args": ["run", "dev"],
      "options": { "cwd": "${workspaceFolder}\\apps\\web" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "dev: all",
      "dependsOrder": "sequence",
      "dependsOn": ["docker: up", "api: dev", "web: dev"],
      "problemMatcher": []
    }
  ]
}
