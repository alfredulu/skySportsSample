{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker: up",
      "type": "shell",
      "command": "docker compose up -d",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "api: dev",
      "type": "shell",
      "command": "${workspaceFolder}\\apps\\api\\.venv\\Scripts\\python.exe -m uvicorn app.main:app --reload --port 8000",
      "options": { "cwd": "${workspaceFolder}\\apps\\api" },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "web: dev",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}\\apps\\web" },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "dev: servers",
      "dependsOn": ["api: dev", "web: dev"],
      "problemMatcher": []
    },
    {
      "label": "dev: all",
      "dependsOrder": "sequence",
      "dependsOn": ["docker: up", "dev: servers"],
      "problemMatcher": []
    }
  ]
}
